<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ee.vikk.kanban.controller.BoardController">
   <top>
      <VBox>
         <children>
            <MenuBar>
              <menus>
                <Menu mnemonicParsing="false" text="Board">
                  <items>
                    <MenuItem mnemonicParsing="false" text="Back to Boards" />
                        <SeparatorMenuItem />
                        <MenuItem mnemonicParsing="false" text="Add Column" />
                        <MenuItem mnemonicParsing="false" text="Board Settings" />
                  </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Task">
                  <items>
                    <MenuItem mnemonicParsing="false" text="Add Task" />
                        <MenuItem mnemonicParsing="false" text="Search Tasks" />
                  </items>
                </Menu>
                <Menu mnemonicParsing="false" text="View">
                  <items>
                    <MenuItem mnemonicParsing="false" text="Refresh" />
                        <MenuItem mnemonicParsing="false" text="Filter by Priority" />
                  </items>
                </Menu>
              </menus>
            </MenuBar>
            <ToolBar>
               <items>
                  <Button mnemonicParsing="false" text="← Back" />
                  <Separator orientation="VERTICAL" />
                  <Label fx:id="boardTitleLabel" text="Board Title" />
                  <Region HBox.hgrow="ALWAYS" />
                  <Button mnemonicParsing="false" text="Add Task" />
                  <Button mnemonicParsing="false" text="Add Column" />
               </items>
            </ToolBar>
         </children>
      </VBox>
   </top>
   <center>
      <ScrollPane fitToHeight="true" hbarPolicy="AS_NEEDED" vbarPolicy="NEVER">
         <content>
            <HBox fx:id="columnsContainer" spacing="15.0">
               <padding>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
               </padding>
            </HBox>
         </content>
      </ScrollPane>
   </center>
   <bottom>
      <HBox alignment="CENTER_LEFT" spacing="10.0">
         <children>
            <Label fx:id="statusLabel" text="Ready" />
         </children>
         <padding>
            <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
         </padding>
      </HBox>
   </bottom>
</BorderPane>
